{% extends 'base.html' %}

{% block title %}{{ post.title }}{% endblock %}

{% block content %}
<div class="relative py-16 bg-white dark:bg-gray-900 overflow-hidden shadow rounded-lg">
    <div class="relative px-4 sm:px-6 lg:px-8">
        <div class="text-lg max-w-prose mx-auto">
            <h1>
                {% if post.category %}
                <a href="{% url 'blog_list' %}?category={{ post.category.slug }}" class="block text-base text-center text-indigo-600 dark:text-indigo-400 font-semibold tracking-wide uppercase">{{ post.category.name }}</a>
                {% else %}
                <span class="block text-base text-center text-indigo-600 dark:text-indigo-400 font-semibold tracking-wide uppercase">Article</span>
                {% endif %}
                <span class="mt-2 block text-3xl text-center leading-8 font-extrabold tracking-tight text-gray-900 dark:text-white sm:text-4xl">{{ post.title }}</span>
            </h1>
            <div class="mt-6 flex items-center justify-center">
                <div class="flex-shrink-0">
                    <span class="sr-only">{{ post.author.username }}</span>
                    <img class="h-10 w-10 rounded-full" src="https://via.placeholder.com/40" alt="Author placeholder image">
                </div>
                <div class="ml-3">
                    <p class="text-sm font-medium text-gray-900 dark:text-white">
                        {{ post.author.username }}
                    </p>
                    <div class="flex space-x-1 text-sm text-gray-500 dark:text-gray-400">
                        <time datetime="{{ post.published_date|date:"Y-m-d" }}">{{ post.published_date|date:"M d, Y" }}</time>
                    </div>
                </div>
            </div>
        </div>
        <div class="mt-8 prose prose-indigo prose-lg text-gray-500 dark:text-gray-300 mx-auto">
            {{ post.content|linebreaks }}
        </div>
        
        <!-- Tags Section -->
        {% if post.tags.all %}
        <div class="mt-8 text-center">
            <div class="mt-4 flex justify-center flex-wrap gap-2">
                {% for tag in post.tags.all %}
                    <a href="{% url 'blog_list' %}?tag={{ tag.slug }}" class="inline-block bg-gray-200 dark:bg-gray-700 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 dark:text-gray-200 hover:bg-gray-300 dark:hover:bg-gray-600">#{{tag.name}}</a>
                {% endfor %}
            </div>
        </div>
        {% endif %}

        <div class="mt-8 text-center">
             <a href="{% url 'blog_list' %}" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                &larr; Back to all posts
            </a>
        </div>
    </div>
</div>
{% endblock %}
